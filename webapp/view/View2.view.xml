    xmlns="sap.m" xmlns:form="sap.ui.layout.form">
    <Page title="{i18n>title2}" showNavButton="true" navButtonPress="onBackPress">
        <content>
       <form:SimpleForm>
    <form:content>
     <Label text="NAME"/>
    <Input editable="false" value="{/NAME}" />
    <Label text="AgencyNumber"/>
    <Input editable="false" id="agencynum" />
    <Label text="Telephone"/>
    <Input editable="false" value="{/TELEPHONE}" />
    <Label text="URL"/>
    <Input editable="false" value="{/URL}"/>
     <Label text="LANGUAGE"/>
     <Input editable="false" value="{/LANGU}"/>
    </form:content>
    </form:SimpleForm>
     </content>
     <footer>
     <Bar >
     <contentLeft>
      <Button text="Edit" icon="sap-icon://edit" press=""/>
      </contentLeft> 
       </Bar>
     </footer>
    </Page>
</mvc:View>