<mvc:View xmlns:table="sap.ui.table" controllerName="sampleflight.controller.View2"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:form="sap.ui.layout.form">
    <Page title="{i18n>title2}" showNavButton="true" navButtonPress="onBackPress">
        <content>
       <form:SimpleForm>
    <form:content>
     <Label text="NAME"/>
    <Input id="idName" editable="{EditInpModel>/isEditable}"  value="{/NAME}" />
    <Label text="AgencyNumber"/>
    <Input  id="agencynum" editable="{EditInpModel>/isEditable}"/>
    <Label text="Telephone"/>
    <Input id="idTel"  value="{/TELEPHONE}"  editable="{EditInpModel>/isEditable}"/>
    <Label text="URL"/>
    <Input id="idUrl"  value="{/URL}" editable="{EditInpModel>/isEditable}"/>
     <Label text="LANGUAGE"/>
     <Input id="idLang"  value="{/LANGU}" editable="{EditInpModel>/isEditable}"/>
    </form:content>
    </form:SimpleForm>
     </content>
     <footer>
     <Bar >
     <contentLeft>
      <Button text="Edit" icon="sap-icon://edit" type="Reject" press="onEdit"/>
      </contentLeft> 
      <contentRight>
       <Button text="Save" press="onSave" type="Emphasized" icon="sap-icon://save"/>
      </contentRight>
       </Bar>
     </footer>
    </Page>
</mvc:View>